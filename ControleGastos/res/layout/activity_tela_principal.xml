<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaPrincipal"
    android:background="@drawable/tela_principal"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_opcoes"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="106dp"
        android:background="@android:color/transparent"
        android:onClick="IrOpcoes" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_opcoes"
        android:layout_alignLeft="@+id/btn_opcoes"
        android:layout_alignRight="@+id/btn_opcoes"
        android:layout_marginBottom="44dp"
        android:text="R$0,00"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="135dp"
        android:layout_height="290dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn_opcoes"
        android:layout_marginLeft="19dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
</RelativeLayout>